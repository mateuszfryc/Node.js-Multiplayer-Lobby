{
  "compilerOptions": {
    "baseUrl": ".",
    "module": "nodenext",
    "moduleResolution": "NodeNext",
    "target": "es2022",
    "isolatedModules": true,
    "checkJs": true,
    "paths": {
      "#/*": ["src/*"],
      "#utils/*": ["src/utils/*"],
      "#config/*": ["src/config/*"],
      "#auth/*": ["src/modules/auth/*"],
      "#persistence/*": ["src/modules/persistence/*"],
      "#users/*": ["src/modules/users/*"],
      "#games/*": ["src/modules/games/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
